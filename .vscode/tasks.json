{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Finalize Feature",
      "type": "shell",
      "command": "python",
      "args": ["scripts/dev_assistant.py", "finalize-feature"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Start Next Feature",
      "type": "shell",
      "command": "python",
      "args": ["scripts/dev_assistant.py", "start-next-feature"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
