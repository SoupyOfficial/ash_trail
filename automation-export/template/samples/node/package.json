{
  "name": "hello-world-node",
  "version": "1.0.0",
  "description": "Sample Node.js project for automation template testing",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "build": "echo 'No build step required for this simple Node.js project'"
  },
  "keywords": ["hello-world", "sample", "automation", "template"],
  "author": "Automation Template",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "@eslint/js": "^8.54.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
