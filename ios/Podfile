# Global platform requirement
# Updated to 16.0 for Google-Maps-iOS-Utils 6.1.3 source build
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Debug-Runner' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  
  # Force a newer Google-Maps-iOS-Utils version for Swift 6 compatibility
  pod 'Google-Maps-iOS-Utils', '~> 6.0'
  
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerUITests' do
    inherit! :complete
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
  
  # Force iOS 16.0 minimum deployment target for all pods
  # This matches the platform requirement above and Google-Maps-iOS-Utils source build
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      # i386 is obsolete - exclude it but keep x86_64 for Intel Mac simulators
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'
      # Suppress compiler/linker warnings from third-party pods (E2E build log noise)
      config.build_settings['GCC_WARN_INHIBIT_ALL'] = 'YES'
      swift_flags = config.build_settings['OTHER_SWIFT_FLAGS'] || '$(inherited)'
      config.build_settings['OTHER_SWIFT_FLAGS'] = swift_flags.to_s.include?('-suppress-warnings') ? swift_flags : "#{swift_flags} -suppress-warnings"
      # Add linker flags to handle missing Swift compatibility libraries in prebuilt GoogleMapsUtils
      linker_flags = config.build_settings['OTHER_LDFLAGS'] || '$(inherited)'
      unless linker_flags.to_s.include?('-undefined dynamic_lookup')
        config.build_settings['OTHER_LDFLAGS'] = "#{linker_flags} -Wl,-undefined,dynamic_lookup"
      end
    end
  end

  # Also set on the project level
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
  end
end
